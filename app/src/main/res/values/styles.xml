<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="custom_def_style">
        <item name="border_width">15dp</item>
        <item name="border_height">25dp</item>
        <item name="border_size">1dp</item>
        <item name="space">6dp</item>
        <item name="border_color">@color/color_black</item>
        <item name="text_size">16dp</item>
    </style>
    <style name="line_feed_def_style">
        <item name="horizontalSpace">5dp</item>
        <item name="verticalSpace">5dp</item>
    </style>


</resources>